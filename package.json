{
  "name": "ewelink-mcp-server",
  "version": "1.0.0",
  "description": "eWeLink MCP Server - Integrated Frontend & Backend - Multitenant Architecture",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "seed:global-admin": "ts-node src/scripts/seedGlobalAdmin.ts",
    "migrate:existing-data": "ts-node src/scripts/migrateExistingData.ts",
    "migrate:users-to-tenants": "ts-node src/scripts/migrateUsersToTenants.ts",
    "setup:multitenant": "npm run prisma:generate && npm run prisma:push && npm run seed:global-admin && npm run migrate:existing-data && npm run migrate:users-to-tenants",
    "seed": "ts-node src/scripts/createCompleteDemoData.ts",
    "setup": "npm run prisma:generate && npm run prisma:push && npm run seed"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.7",
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "prisma": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
